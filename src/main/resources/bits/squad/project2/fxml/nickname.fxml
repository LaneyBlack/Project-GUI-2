<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bits.squad.project2.Controllers.NicknameController">
    <Label alignment="CENTER" text="Please enter your nickname:" textAlignment="CENTER">
        <font>
            <Font name="Calibri Light" size="20.0" />
        </font>
    </Label>
    <TextField fx:id="nicknameField" prefHeight="32.0" prefWidth="760.0" promptText="Nickname"/>
   <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submit" prefHeight="20.0" prefWidth="80.0" style="-fx-background-color: lightgreen;" text="Submit" textAlignment="CENTER">
      <font>
         <Font size="15.0" />
      </font>
   </Button>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

</VBox>
